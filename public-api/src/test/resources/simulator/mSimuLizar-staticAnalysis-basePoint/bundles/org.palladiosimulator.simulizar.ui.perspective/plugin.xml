<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.palladiosimulator.simulizar.ui.perspective.category"
            class="org.eclipse.ui.navigator.CommonNavigator"
            icon="icons/navigator.png"
            id="org.palladiosimulator.simulizar.ui.perspective.navigator"
            name="SimuLizar Navigator">
      </view>
      <category
            id="org.palladiosimulator.simulizar.ui.perspective.category"
            name="SimuLizar">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="org.palladiosimulator.simulizar.ui.perspective.navigator">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="org.palladiosimulator.simulizar.ui.perspective.navigator">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
            <contentExtension
                  pattern="org.palladiosimulator.simulizar.ui.perspective.navigator.filter">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.palladiosimulator.simulizar.ui.perspective">
         <view
               id="org.palladiosimulator.simulizar.ui.perspective.navigator"
               minimized="false"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="de.uka.ipd.sdq.codegen.simudatavisualization.ExperimentsView"
               minimized="false"
               ratio="0.25"
               relationship="stack"
               relative="org.palladiosimulator.simulizar.ui.perspective.navigator"
               visible="true">
         </view>
         <view
               id="org.palladiosimulator.edp2.ui.views.navigator"
               minimized="false"
               ratio="0.25"
               relationship="stack"
               relative="org.palladiosimulator.simulizar.ui.perspective.navigator"
               visible="true">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.palladiosimulator.simulizar.ui.perspective">
         <actionSet
               id="org.eclipse.debug.ui.launchActionSet">
         </actionSet>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.palladiosimulator.simulizar.ui.perspective">
         <view
               id="de.uka.ipd.sdq.codegen.simucontroller.gui.DockStatusViewPart"
               minimized="false"
               ratio="0.75"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.palladiosimulator.simulizar.ui.perspective.perspectives.SimulizarPerspective"
            icon="platform:/plugin/org.palladiosimulator.simulizar.ui/icon/icon_16.png"
            id="org.palladiosimulator.simulizar.ui.perspective"
            name="SimuLizar Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonFilter
            activeByDefault="true"
            class="org.palladiosimulator.simulizar.ui.perspective.filter.MeasuringPointProfileApplicationFileFilter"
            id="org.palladiosimulator.simulizar.ui.perspective.navigator.filter"
            name="Measuring point profile application file"
            visibleInUI="false">
      </commonFilter>
   </extension>

</plugin>
